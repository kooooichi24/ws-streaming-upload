{
  "name": "ws-streaming-upload-backend",
  "version": "1.0.0",
  "description": "WebSocket streaming upload backend with Serverless Framework",
  "main": "dist/handler.js",
  "scripts": {
    "build": "tsc",
    "deploy": "serverless deploy",
    "deploy:dev": "serverless deploy --stage dev",
    "deploy:prod": "serverless deploy --stage prod",
    "remove": "serverless remove",
    "logs": "serverless logs -f",
    "invoke": "serverless invoke -f",
    "dynamodb:up": "docker-compose -p ws-streaming-upload -f docker/docker-compose.yml up -d dynamodb-local",
    "dynamodb:down": "docker-compose -p ws-streaming-upload -f docker/docker-compose.yml down",
    "dynamodb:logs": "docker-compose -p ws-streaming-upload -f docker/docker-compose.yml logs -f dynamodb-local",
    "dynamodb:create-table": "tsx scripts/create-table.ts",
    "offline": "IS_OFFLINE=true serverless offline",
    "offline:start": "IS_OFFLINE=true serverless offline start",
    "offline:full": "npm run dynamodb:up && sleep 3 && npm run dynamodb:create-table && npm run offline"
  },
  "keywords": [
    "websocket",
    "serverless",
    "aws",
    "lambda"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "@aws-sdk/client-apigatewaymanagementapi": "^3.700.0",
    "@aws-sdk/client-dynamodb": "^3.700.0",
    "@aws-sdk/lib-dynamodb": "^3.700.0"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "serverless": "^4.23.0",
    "serverless-offline": "^14.4.0",
    "tsx": "^4.19.2",
    "typescript": "^5.9.3"
  }
}

